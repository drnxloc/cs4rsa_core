<UserControl
    x:Class="Cs4rsa.Views.ScheduleTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:Cs4rsa.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Cs4rsa.ViewModels"
    xmlns:vml="clr-namespace:Cs4rsa.ViewModelLocator"
    d:DataContext="{d:DesignInstance Type=viewmodels:ScheduleTableViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="700"
    vml:ViewModelLocator.AutoHookedUpViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="Style_Line_Timeline" TargetType="Line">
            <Setter Property="Stroke" Value="#dfe6e9" />
        </Style>
        <Style x:Key="Style_cnvDaySchedule" TargetType="control:DayPanel">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f1f2f6" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Chọn tuần ngăn cách giữa hai giai đoạn" />
            <ComboBox
                VerticalAlignment="Center"
                ItemsSource="{Binding PhaseStore.Weeks}"
                SelectedIndex="{Binding PhaseStore.BetweenPointIndex}" />
        </StackPanel>
        <TextBlock Grid.Row="1">
            <Run Text="{Binding PhaseStore.StartWeek, StringFormat=Giai đoạn 1 (bắt đầu từ tuần {0} đến tuần}" />
            <Run Text="{Binding PhaseStore.CurrentBetweenPointValue, StringFormat={}{0})}" />
        </TextBlock>
        <Grid x:Name="Grid_Schedule" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="28" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="T2" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Text="T3" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                Text="T4" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="4"
                Text="T5" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="5"
                Text="T6" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="6"
                Text="T7" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="7"
                Text="CN" />

            <ItemsControl
                Grid.Row="1"
                Grid.Column="1"
                ItemsSource="{Binding Phase1_Monday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="2"
                ItemsSource="{Binding Phase1_Tuesday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="3"
                ItemsSource="{Binding Phase1_Wednesday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="4"
                ItemsSource="{Binding Phase1_Thursday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="5"
                ItemsSource="{Binding Phase1_Friday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="6"
                ItemsSource="{Binding Phase1_Saturday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="7"
                ItemsSource="{Binding Phase1_Sunday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="8"
                ItemsSource="{Binding Timelines}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:TimeLinePanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,3,0"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Text="{Binding}" />
                            <Rectangle
                                Grid.Column="1"
                                Height="0.2"
                                Fill="LightGray" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <TextBlock Grid.Row="3" Text="Giai đoạn 2 (Từ tuần between point value - end Week)" />
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="28" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Text="T2" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Text="T3" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="3"
                Text="T4" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="4"
                Text="T5" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="5"
                Text="T6" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="6"
                Text="T7" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="7"
                Text="CN" />

            <ItemsControl
                Grid.Row="1"
                Grid.Column="1"
                ItemsSource="{Binding Phase2_Monday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="2"
                ItemsSource="{Binding Phase2_Tuesday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="3"
                ItemsSource="{Binding Phase2_Wednesday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="4"
                ItemsSource="{Binding Phase2_Thursday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="5"
                ItemsSource="{Binding Phase2_Friday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="6"
                ItemsSource="{Binding Phase2_Saturday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="7"
                ItemsSource="{Binding Phase2_Sunday}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:DayPanel Style="{StaticResource Style_cnvDaySchedule}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <control:ScheduleBlock
                            BlockColor="{Binding Background, Mode=OneTime}"
                            BlockName="{Binding Content, Mode=OneTime}"
                            Description="{Binding Description, Mode=OneTime}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="8"
                ItemsSource="{Binding Timelines}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <control:TimeLinePanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="0,0,3,0"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Text="{Binding}" />
                            <Rectangle
                                Grid.Column="1"
                                Height="0.2"
                                Fill="LightGray" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
