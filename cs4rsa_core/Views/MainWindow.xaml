<Window
    x:Class="cs4rsa_core.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:cs4rsa_core.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:cs4rsa_core.ViewModels"
    xmlns:vml="clr-namespace:cs4rsa_core.ViewModelLocator"
    Title="CS4RSA"
    Width="1500"
    Height="700"
    MinHeight="600"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
    vml:ViewModelLocator.AutoHookedUpViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type materialDesign:SnackbarMessage}}" TargetType="{x:Type materialDesign:SnackbarMessage}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <Style
            x:Key="Style_Cs4rsa_SnackbarActionButton"
            BasedOn="{StaticResource MaterialDesignSnackbarActionButton}"
            TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource Cs4rsa_MainThemeLightColor}" />
        </Style>
    </Window.Resources>
    <materialDesign:DialogHost
        CloseOnClickAway="{Binding IsCloseOnClickAway}"
        DialogContent="{Binding DialogUC}"
        IsOpen="{Binding IsOpenDialog}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <materialDesign:Transitioner SelectedIndex="{Binding SelectedIndex}">
                    <local:Home />
                    <local:Login />
                    <local:MainScheduling />
                    <local:AutoSchedule />
                    <materialDesign:TransitionerSlide>
                        <materialDesign:TransitionerSlide.BackwardWipe>
                            <materialDesign:SlideWipe Direction="Down" />
                        </materialDesign:TransitionerSlide.BackwardWipe>
                        <materialDesign:TransitionerSlide.ForwardWipe>
                            <materialDesign:SlideWipe Direction="Up" />
                        </materialDesign:TransitionerSlide.ForwardWipe>
                        <local:Info />
                    </materialDesign:TransitionerSlide>
                </materialDesign:Transitioner>
                <materialDesign:Snackbar
                    HorizontalAlignment="Center"
                    ActionButtonStyle="{StaticResource ResourceKey=Style_Cs4rsa_SnackbarActionButton}"
                    MessageQueue="{Binding SnackbarMessageQueue}">
                    <materialDesign:SnackbarMessage HorizontalContentAlignment="Center" />
                </materialDesign:Snackbar>
            </Grid>
            <Grid
                x:Name="Grid_Menu"
                Width="65"
                HorizontalAlignment="Left"
                Background="{StaticResource Cs4rsa_MainThemeColor}">
                <Grid.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="BeginExpandMenuAnimation">
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Width"
                                                From="65"
                                                To="200"
                                                Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <PowerEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="BeginExpandMenuAnimation" />
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard x:Name="EndExpandMenuAnimation">
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetProperty="Width"
                                                From="200"
                                                To="65"
                                                Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <PowerEase EasingMode="EaseOut" />
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="EndExpandMenuAnimation" />
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <materialDesign:TransitioningContent x:Name="TrainsitionigContentSlide" OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromLeft, Duration=0:0:0.3}">
                    <Grid
                        x:Name="GridCursor"
                        Width="10"
                        Height="60"
                        Margin="0,100,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="{StaticResource Cs4rsa_MainThemeLightColor}" />
                </materialDesign:TransitioningContent>
                <ListView
                    x:Name="ListViewMenu"
                    Margin="0,100"
                    FontSize="18"
                    Foreground="White"
                    PreviewMouseLeftButtonUp="ListViewMenu_PreviewMouseLeftButtonUp"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem
                        x:Name="ListViewItem_Menu"
                        Width="65"
                        Height="60"
                        HorizontalAlignment="Left">
                        <ListViewItem.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                        <Setter Property="ToolTip" Value="Mở rộng Menu" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                        <Setter Property="ToolTip" Value="Thu nhỏ Menu" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Kind="Menu" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <ListViewItem.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                        <Setter Property="ToolTip" Value="Trang chủ" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Kind="Home" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="Trang chủ" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <ListViewItem.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                        <Setter Property="ToolTip" Value="Tài khoản DTU" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Kind="Account" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="Tài khoản DTU" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <ListViewItem.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                        <Setter Property="ToolTip" Value="Xếp lịch thủ công" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Kind="Calendar" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="Xếp lịch thủ công" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <ListViewItem.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                        <Setter Property="ToolTip" Value="Xếp lịch tự động" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Kind="AutoFix" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="Xếp lịch tự động" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60">
                        <ListViewItem.Style>
                            <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListViewItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                        <Setter Property="ToolTip" Value="Thông tin" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListViewItem.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Kind="Information" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                Text="Thông tin" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
