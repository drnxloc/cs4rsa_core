<UserControl
    x:Class="Cs4rsa.Dialogs.DialogViews.SessionInputUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cs4rsa.Dialogs.DialogViews"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Cs4rsa.Dialogs.Implements"
    xmlns:vml="clr-namespace:Cs4rsa.ViewModelLocator"
    d:DesignHeight="250"
    d:DesignWidth="400"
    vml:DialogVMLocator.AutoHookedUpViewModel="True"
    mc:Ignorable="d">
    <materialDesign:Card Width="400">
        <StackPanel>
            <ProgressBar
                Margin="0,10,0,0"
                IsIndeterminate="True"
                Style="{StaticResource MaterialDesignCircularProgressBar}"
                Value="35" />
            <TextBlock Margin="10" TextWrapping="Wrap">
                Chờ một lát trong lúc CS4RSA tìm kiếm thông tin của sinh viên. Hãy đảm bảo rằng
                bạn đã đăng nhập vào MyDTU trước khi lấy SessionID. Quá trình này sẽ mất một chút
                thời gian, hãy kiên nhẫn.
            </TextBlock>
        </StackPanel>
    </materialDesign:Card>
</UserControl>
