<UserControl
    x:Class="Cs4rsa.BaseClasses.CredizDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cs4rsa.BaseClasses"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:Cs4rsa.BaseClasses"
    d:DataContext="{d:DesignInstance Type=viewmodels:CredizDialog}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <materialDesign:Card Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=1, Mode=FindAncestor}, Path=ActualWidth}" Height="{Binding RelativeSource={RelativeSource AncestorType=UserControl, AncestorLevel=1, Mode=FindAncestor}, Path=ActualWidth}">
                <StackPanel>
                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorLevel=1, AncestorType=local:CredizDialog, Mode=Self}, Path=DialogTitle}" />
                    <ContentPresenter ContentSource="Content" />
                </StackPanel>
            </materialDesign:Card>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
