<UserControl x:Class="cs4rsa.Views.SearchSession"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:cs4rsa.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Tìm kiếm"
                   Grid.Row="0"></TextBlock>
        <ComboBox Grid.Row="1"
                  Grid.Column="0"
                  Margin="0, 5, 5, 0"
                  x:Name="DisciplineComboBox"
                  Loaded="DisciplineComboBox_Loaded"
                  SelectionChanged="DisciplineComboBox_SelectionChanged"
                  ItemsSource="{Binding Disciplines}"
                  SelectedItem="{Binding SelectedDiscipline}"
                  DisplayMemberPath="Discipline"
                  SelectedValuePath="Discipline"></ComboBox>
        <ComboBox Grid.Row="1"
                  Grid.Column="1"
                  Margin="0, 5, 5, 0"
                  x:Name="Keyword1ComboxBox"
                  ItemsSource="{Binding DisciplineKeywordModels}"
                  SelectedItem="{Binding SelectedKeyword}"
                  SelectedValuePath="Keyword1">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding Keyword1}"></Run>
                        <Run Text=" - "></Run>
                        <Run Text="{Binding SubjectName}"></Run></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Thêm"
                Grid.Row="1"
                Grid.Column="2"
                Margin="0, 5, 0, 0"
                x:Name="DisciplineKeywordButton"
                Command="{Binding AddCommand}"
                IsEnabled="{Binding CanRunAddCommand}"></Button>
        <TextBox Grid.Row="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="0, 10, 5, 0"
                 TextWrapping="Wrap" />
        <Button Grid.Row="2"
                Grid.Column="2"
                Margin="0, 10, 0, 0"
                Content="Thêm"></Button>
        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="3"
                   Text="{Binding TotalSubject, StringFormat={}Các môn ({0})}"></TextBlock>
        <ListBox Grid.Row="4"
                 Grid.ColumnSpan="3"
                 x:Name="DownloadSubjects"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ItemsSource="{Binding SubjectModels}"
                 SelectedItem="{Binding SelectedSubjectModel}">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="{Binding SubjectCode}"></TextBlock>
                        <TextBlock Grid.Row="1"
                                   Text="{Binding SubjectName}"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <WrapPanel Grid.ColumnSpan="3" Grid.Row="5">
            <Button Content="Xoá"
                    Command="{Binding DeleteCommand}"
                    Width="auto">
            </Button>
            <Button Content="Nhập"
                Width="auto"></Button>
        </WrapPanel>
        <TextBlock Text="{Binding TotalCredits, StringFormat={}Tổng số tín chỉ ({0})}"
                   Grid.Row="6"
                   Grid.ColumnSpan="3"></TextBlock>
        <CheckBox Grid.Row="7"
                  Content="Cập nhật liên tục"
                  Margin="0, 10, 0, 0"
                  Grid.ColumnSpan="3"></CheckBox>
    </Grid>
</UserControl>
