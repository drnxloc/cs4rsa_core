<UserControl x:Class="cs4rsa.Views.SearchSession"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:cs4rsa.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Row="0"
                  Grid.Column="0"
                  Margin="0, 5, 5, 0"
                  x:Name="DisciplineComboBox"
                  Loaded="DisciplineComboBox_Loaded"
                  SelectionChanged="DisciplineComboBox_SelectionChanged"
                  ItemsSource="{Binding Disciplines}"
                  SelectedItem="{Binding SelectedDiscipline}"
                  DisplayMemberPath="Discipline"
                  SelectedValuePath="Discipline"></ComboBox>
        <ComboBox Grid.Row="0"
                  Grid.Column="1"
                  Margin="0, 5, 5, 0"
                  x:Name="Keyword1ComboxBox"
                  ItemsSource="{Binding DisciplineKeywordModels}"
                  SelectedItem="{Binding SelectedDisciplineKeyWord}"
                  SelectedValuePath="Keyword1">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding Keyword1}"></Run>
                        <Run Text=" - "></Run>
                        <Run Text="{Binding SubjectName}"></Run>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Add"
                Grid.Row="0"
                Grid.Column="2"
                Margin="0, 5, 0, 0"
                x:Name="DisciplineKeywordButton"
                ></Button>
        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Margin="0, 10, 5, 0"
                 TextWrapping="Wrap" />
        <Button Grid.Row="1"
                Grid.Column="2"
                Margin="0, 10, 0, 0"
                Content="Add"></Button>
    </Grid>
</UserControl>
