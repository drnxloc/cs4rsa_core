<Window x:Class="cs4rsa.Views.AutoSchedule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter="clr-namespace:cs4rsa.Converters.DialogConverters"
        xmlns:local="clr-namespace:cs4rsa.Views"
        mc:Ignorable="d"
        Title="AutoSchedule" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <converter:Base64ImageConverter x:Key="Base64ImageConverter"/>
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="5"
              Grid.Row="0"
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Ellipse Height="80" 
                        Width="80"
                        Grid.Column="0">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding StudentModel.StudentInfo.Image, Converter={StaticResource Base64ImageConverter}}"
                                            Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>
            <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            Margin="5,0,5,0">
                <TextBlock Text="{Binding StudentModel.StudentInfo.Name}"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,17,0,0"></TextBlock>
                <TextBlock Text="{Binding StudentModel.StudentInfo.StudentId}"
                               Margin="0,5,0,0"
                           FontSize="16"></TextBlock>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.7*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="Danh sách các môn của bạn"
                           Style="{StaticResource Header2}"
                           Grid.Row="0"></TextBlock>

                <ListView Grid.Row="1"
                          x:Name="ListViewSubjects"
                          Style="{StaticResource Cs4rsaListView}"
                          ItemsSource="{Binding ProgramSubjectModels}"
                          SelectedItem="{Binding SelectedProSubject}">
                    <ListView.Resources>
                        <ContextMenu x:Key="YourSubjectContextMenu" Opened="ContextMenu_Opened">
                            <MenuItem Header="Thêm" Command="{Binding AddCommand}"></MenuItem>
                            <MenuItem Header="Xem điểm của môn này" Command="{Binding WatchDetailCommand}"></MenuItem>
                        </ContextMenu>
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Rectangle Height="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem, Mode=FindAncestor, AncestorLevel=1}}"
                                           Fill="{Binding Color}"
                                           Width="20">
                                </Rectangle>
                                <StackPanel Orientation="Vertical"
                                            Grid.Column="1">
                                    <TextBlock Text="{Binding SubjectName}"
                                           Margin="5,0,0,0"
                                           FontSize="16"></TextBlock>
                                    <TextBlock 
                                           Margin="5,0,0,5">
                                    <Run Text="{Binding SubjectCode}"></Run>
                                    <Run Text=" - "></Run>
                                    <Run Text="{Binding FolderName}"></Run>
                                    </TextBlock>
                                    <TextBlock FontSize="10"
                                           Margin="5,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Folder chứa môn này chưa hoàn thành"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFolderCompleted}" Value="True">
                                                        <Setter Property="Text" Value="Folder chứa môn này đã hoàn thành"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal">

                                        <Ellipse Height="10" 
                                             Width="10"
                                             Margin="5,0,0,5"
                                             HorizontalAlignment="Left">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#f12711"></Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                            <Setter Property="Fill" Value="#45a247"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>

                                        <TextBlock Margin="5,0,0,0"
                                               FontSize="10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Chưa học qua"></Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                            <Setter Property="Text" Value="Đã học qua"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Height="10" 
                                             Width="10"
                                             Margin="5,0,0,5"
                                             HorizontalAlignment="Left">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#f5af19"></Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCanChoice}" Value="True">
                                                            <Setter Property="Fill" Value="#80D0C7"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Margin="5,0,0,0"
                                               FontSize="10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Không thể chọn"></Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCanChoice}" Value="True">
                                                            <Setter Property="Text" Value="Có thể chọn"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="ContextMenu" Value="{StaticResource YourSubjectContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <TextBox Grid.Row="2"
                         Margin="0,5,0,5"
                         Height="20"
                         TextChanged="TextBox_TextChanged"
                         x:Name="TextBoxSubjectName"></TextBox>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Height="30"
                        Content="Thêm"
                        Grid.Column="0"
                        Command="{Binding AddCommand}"
                        Margin="0,0,5,0"></Button>
                    <Button Height="30"
                        Content="Thêm nhanh"
                         Grid.Column="1"
                        Command="{Binding AddCommand}"></Button>
                </Grid>

            </Grid>
            <Grid Grid.Column="1"
                  Margin="0,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Các môn bạn đã chọn"
                                   Style="{StaticResource Header2}"
                                   Grid.Row="0">
                    </TextBlock>
                    <ListView Grid.Row="1"
                              Margin="0,0,0,5"
                              Style="{StaticResource Cs4rsaListView}"
                              ItemsSource="{Binding ChoicedProSubjectModels}"
                              SelectedItem="{Binding SelectedProSubjectInChoiced}">
                        <ListView.Resources>
                            <ContextMenu x:Key="ChoicedSubjectContextMenu" Opened="ContextMenu_Opened">
                                <MenuItem Header="Xoá" Command="{Binding DeleteCommand}"/>
                                <MenuItem Header="Mở trong courses.duytan.edu.vn" Command="{Binding GotoCourseCommand}"/>
                            </ContextMenu>
                        </ListView.Resources>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SubjectName}"></TextBlock>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="ContextMenu" Value="{StaticResource ChoicedSubjectContextMenu}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <Button Content="Sắp xếp"
                            Grid.Row="2"
                            Height="30"
                            Command="{Binding SortCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"></Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="IsEnabled" Value="True"></Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ProgramSubjectModels.Count}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"></Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <GroupBox Header="Hiển thị"
                                  x:Name="GroupBoxDisplay">
                            <StackPanel>
                                <RadioButton Content="Tất cả"
                                             Click="ReloadSubjects"
                                             x:Name="RadioButtonAll"
                                             IsChecked="True"></RadioButton>
                                <RadioButton Content="Các môn có thể chọn"
                                             Click="ReloadSubjects"
                                             x:Name="RadioButtonCanChoice"></RadioButton>
                                <RadioButton Content="Các môn đã học qua"
                                             Click="ReloadSubjects"
                                             x:Name="RadioButtonDoneSubject"></RadioButton>
                                <RadioButton Content="Các môn có sẵn trong kỳ này"
                                             Click="ReloadSubjects"
                                             x:Name="RadioButtonAvailableSubject"></RadioButton>
                                <RadioButton Content="Các môn thuộc thư mục chưa hoàn thành"
                                             Click="ReloadSubjects"
                                             x:Name="RadioButtonUnCompletedFolder"></RadioButton>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Sắp xếp">
                            <StackPanel>
                                <RadioButton Content="Để y đó"
                                             IsChecked="True"></RadioButton>
                                <RadioButton Content="Theo tên"></RadioButton>
                                <RadioButton Content="Theo mã môn"></RadioButton>
                                <RadioButton Content="Theo thư mục chứa"></RadioButton>
                                <RadioButton Content="Theo số tín chỉ"></RadioButton>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>

            </Grid>
            <Grid Grid.Column="2"
                  Margin="0,5,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource Header2}">
                    <Run Text="Các cách sắp xếp ("></Run>
                    <Run Text="{Binding CombinationCount}"></Run>
                    <Run Text=")"></Run>
                </TextBlock>
                <ListView Grid.Row="1"
                          Style="{StaticResource Cs4rsaListView}"
                          Margin="3,0.4,-3.6,5"
                          ItemsSource="{Binding CombinationModels}"
                          SelectedItem="{Binding SelectedCombinationModel}">
                    <ListView.Resources>
                        <ContextMenu x:Key="CombiContextMenu" Opened="ContextMenu_Opened">
                            <MenuItem Header="Hiển thị trên mô phỏng" Command="{Binding ShowOnSimuCommand}"/>
                        </ContextMenu>
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <ItemsControl ItemsSource="{Binding ClassGroupModels}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Width="{Binding Path=Width, RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1,AncestorType=ListViewItem}}">
                                                
                                            </WrapPanel>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"
                                                       Padding="5"
                                                       Background="#dfe6e9"></TextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="ContextMenu" Value="{StaticResource CombiContextMenu}"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
        <StatusBar Grid.Row="2"
                   Grid.ColumnSpan="3">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock Text="Các môn trong chương trình"></TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <ProgressBar Width="100"
                             Height="17"
                             Maximum="100"
                             Value="{Binding ProgressValue}"></ProgressBar>
            </StatusBarItem>
            <Separator Grid.Column="2" />
        </StatusBar>
    </Grid>
</Window>
