<Window x:Class="cs4rsa.Dialogs.DialogViews.ShareStringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs4rsa.Dialogs.DialogViews"
        mc:Ignorable="d"
        Title="Xuất với ShareString"
        Height="150" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel>
        <TextBlock TextWrapping="Wrap"
                   Margin="5">Chia sẻ ShareString này cho bạn bè của
        mình hiện tại đang chạy CS4RSA trên một thiết bị khác, giúp họ
        thấy được lịch mà bạn đã sắp xếp.</TextBlock>
        <TextBox Text="{Binding ShareString}"
                 IsEnabled="False"
                 Margin="5,0,5,5"
                 Background="#f5f5f5"></TextBox>
        <Button Content="Sao chép"
                Command="{Binding CopyCommand}"
                Margin="5,0,5,5"></Button>
    </StackPanel>
</Window>
