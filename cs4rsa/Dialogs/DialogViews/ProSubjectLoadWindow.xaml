<Window x:Class="cs4rsa.Dialogs.DialogViews.ProSubjectLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs4rsa.Dialogs.DialogViews"
        xmlns:dialogExtension="clr-namespace:cs4rsa.Dialogs.Extensions"
        mc:Ignorable="d"
        dialogExtension:DialogExtension.DialogResult="{Binding Result}"
        Title="ProSubjectLoadWindow"
        Height="120" 
        Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock TextWrapping="Wrap"
                   Margin="5">Đang lấy thông tin về chương trình học từ MyDTU của bạn, 
            hãy chờ một lát sẽ rất nhanh.</TextBlock>
        <ProgressBar Height="30"
                     Maximum="100"
                     Margin="5,0,5,5"
                     Value="{Binding ProgressValue}"></ProgressBar>
    </StackPanel>
</Window>
