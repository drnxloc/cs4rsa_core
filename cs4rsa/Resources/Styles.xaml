<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:cs4rsa.Resources">
    <Style x:Key="Caption" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="FontWeight" Value="Normal"></Setter>
    </Style>
    <Style x:Key="Cs4rsaCombobox" TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="FontWeight" Value="Normal"></Setter>
    </Style>
    <Style x:Key="Header2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="FontWeight" Value="Regular"></Setter>
    </Style>
    <Style x:Key="Cs4rsaListBox" TargetType="ListBox">
        <Setter Property="Background" Value="#f5f5f5"></Setter>
    </Style>
    <Style x:Key="Cs4rsaListView" TargetType="ListView">
        <Setter Property="Background" Value="#f5f5f5"></Setter>
    </Style>
    <Style x:Key="PlaceCheckBox" TargetType="CheckBox">
        <Setter Property="Margin" Value="0,0,5,0"></Setter>
    </Style>
</ResourceDictionary>