<Application x:Class="cs4rsa.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:cs4rsa" StartupUri="Views/MainWindow.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <Style x:Key="Header1" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="Regular"></Setter>
        </Style>
        <Style x:Key="Header2" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="Regular"></Setter>
        </Style>
        <Style x:Key="Cs4rsaListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#f5f5f5"></Setter>
        </Style>
        <Style x:Key="Cs4rsaListView" TargetType="ListView">
            <Setter Property="Background" Value="#f5f5f5"></Setter>
        </Style>
        <Style x:Key="PlaceCheckBox" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,5,0"></Setter>
        </Style>
    </Application.Resources>
</Application>